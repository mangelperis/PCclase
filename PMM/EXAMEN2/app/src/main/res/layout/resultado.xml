<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1">


    <TextView android:id="@+id/LabelZona"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20dp"

        android:layout_margin="15dp" />

    <TextView android:id="@+id/LabelPrecio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20dp"


        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/LabelTarifa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:textStyle="normal"

        android:layout_margin="15dp" />

    <TextView android:id="@+id/LabelPeso"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_below="@+id/LabelZona"

        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/LabelDecoracion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LblTarifa"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="normal"

        android:layout_margin="15dp" />

    <TextView android:id="@+id/LabelContinente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="20dp"
        android:layout_below="@+id/LabelZona" />




</LinearLayout>