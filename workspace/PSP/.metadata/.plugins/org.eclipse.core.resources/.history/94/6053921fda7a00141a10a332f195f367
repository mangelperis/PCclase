package dos;

public class Hilos2 implements Runnable{
	
	
	private Thread hilo=null;
	
	
	private static int c1,c2;
	private static int valor,valor2;
	Hilos2 (int c1,int c2){
		this.c1=c1;
		this.c2=c2;
		
	}
	
	public void start(){
		if (hilo == null ){
			valor = c1;
			valor2 = c2;
			
			
			hilo=new Thread(this);	//creo el hilo
			hilo.start(); //lanzo hilo
						
		}
		
	}
	@Override
	public void run() {
		// TODO Auto-generated method stub
		while (true){

			/*System.out.println(".: Hilo :.");
			System.out.println("Contador1:: "+valor);
			System.out.println("Contador2:: "+valor2);
			
			System.out.println();
			
		*/
			try {
				Thread.sleep(1000);
				valor += 1;
				valor2 += 2;
			}catch (InterruptedException e){}
			
			
		}
		
	}
	public int getContador1 (){
		return valor;
	}
	
	public int getContador2 (){
		return valor2;
	}
	
	

}
