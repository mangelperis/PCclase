package dos;

import java.awt.*;
import java.awt.event.*;
import java.applet.*;



@SuppressWarnings("serial")
public class HiloApplet extends Applet implements Runnable {
		
	private Thread hilo_applet = null;
	private UsarApplet h = null;
	int c1_applet = 1;
	int c2_applet = 5;
	private Font fuente;
	 
	//m√©todo init
		public void init(){
			fuente=new Font("Verdana",Font.BOLD,26);
			setBackground(Color.yellow);//color de fondo
			
		}
		
		
	HiloApplet (int c1,int c2){
		this.c1=c1;
		this.c2=c2;
		valor = c1;
		valor2 = c2;
		
	}
	public void start(){
		h = new Thread(this);
		h.start();						
	}
	

	@Override
	public void run() {
		// TODO Auto-generated method stub		
		while (true){
				
			try {
				Thread.sleep(1000);
				valor += 1;
				valor2 += 2;
			}catch (InterruptedException e){}
			repaint();
			
		}
		
	}
	
	public void paint(Graphics g){
		g.setFont(fuente);
		g.drawString("C1:: "+Integer.toString((int)valor), 40, 100); //escribe contador
		g.drawString("C2:: "+Integer.toString((int)valor2), 40, 170);
		
	}	
	
	public int getContador1 (){
		return valor;
	}
	
	public int getContador2 (){
		return valor2;
	}
		
		

}
